# Environment variables for RegisterTransferAgent script
# Copy this to .env in the contracts/ directory

# Your wallet private key (must be the OCXToken owner)
PRIVATE_KEY=your_private_key_here

# RPC endpoint for your blockchain network
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Or use: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Deployed contract addresses (get these from your deployment)
OCX_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
UPGRADE_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000

# Optional: Etherscan API key for verification
ETHERSCAN_API_KEY=your_etherscan_key_here
