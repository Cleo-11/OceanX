# =====================================================
# SECURE CLAIM SYSTEM - ENVIRONMENT VARIABLES
# =====================================================
# 
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control!

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# You should already have these from your Supabase project

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# CLAIM SIGNER PRIVATE KEY
# =====================================================
# ⚠️ CRITICAL SECURITY REQUIREMENT ⚠️
# 
# This is the private key used to sign claim payloads.
# - Generate a new wallet specifically for this purpose
# - NEVER share this key with anyone
# - NEVER commit it to git
# - NEVER expose it to clients
# - Use different keys for dev/staging/production
#
# To generate a new key, run:
#   node -e "console.log(require('ethers').Wallet.createRandom().privateKey)"

CLAIM_SIGNER_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# =====================================================
# CLAIM CONFIGURATION (Optional)
# =====================================================

# The chain ID for EIP-712 domain (default: 1)
# 1 = Ethereum Mainnet
# 11155111 = Sepolia Testnet
# 137 = Polygon
# 80001 = Mumbai Testnet
CLAIM_CHAIN_ID=1

# Default claim expiration time in seconds (default: 300 = 5 minutes)
CLAIM_DEFAULT_EXPIRATION=300

# Maximum claim amount (optional safety limit)
# Set this to prevent accidentally creating huge claims
CLAIM_MAX_AMOUNT=1000000000000000000000  # 1000 tokens (18 decimals)

# =====================================================
# RATE LIMITING (Optional)
# =====================================================

# Maximum claims per wallet per time window
CLAIM_RATE_LIMIT_MAX=10

# Rate limit time window in milliseconds (default: 60000 = 1 minute)
CLAIM_RATE_LIMIT_WINDOW=60000

# =====================================================
# MONITORING & LOGGING (Optional)
# =====================================================

# Enable verbose claim logging (true/false)
CLAIM_VERBOSE_LOGGING=true

# Webhook URL for claim notifications (optional)
# Useful for alerting on suspicious activity
CLAIM_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# =====================================================
# DEVELOPMENT SETTINGS (Dev only, remove in production)
# =====================================================

# Allow test claims in development (true/false)
# WARNING: Set to false in production!
CLAIM_ALLOW_TEST_MODE=true

# Skip signature verification in development (true/false)
# WARNING: NEVER enable this in production!
CLAIM_SKIP_SIGNATURE_VERIFICATION=false
